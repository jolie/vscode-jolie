{
	"name": "vscode-jolie",
	"displayName": "Jolie Language Support",
	"description": "Language support for the Jolie programming language (https://jolie-lang.org)",
	"version": "1.5.0",
	"license": "MIT",
	"icon": "images/icon.png",
	"author": {
		"name": "Fabrizio Montesi",
		"email": "famontesi@gmail.com",
		"url": "https://fabriziomontesi.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jolie/vscode-jolie"
	},
	"publisher": "jolie",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"taskDefinitions": [
			{
				"type": "run"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+alt+n",
				"when": "!isMac",
				"command": "workbench.action.tasks.runTask",
				"args": "run"
			},
			{
				"key": "cmd+alt+n",
				"when": "isMac",
				"command": "workbench.action.tasks.runTask",
				"args": "run"
			}
		],
		"languages": [
			{
				"id": "jolie",
				"aliases": [
					"Jolie",
					"jolie"
				],
				"extensions": [
					".ol",
					".iol"
				],
				"configuration": "./language-configuration.json",
				"firstLine": "^#!/.*\\bjolie\\b"
			}
		],
		"grammars": [
			{
				"language": "jolie",
				"scopeName": "source.jolie",
				"path": "./syntaxes/jolie.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Jolie",
			"properties": {
				"jolie.languageServer.showDebugMessages": {
					"type": "boolean",
					"description": "Show debug messages from the Jolie Language Server in the Extensions Output Panel",
					"default": "false"
				},
				"jolie.languageServer.tcpPort": {
					"type": "number",
					"description": "The TCP port used by the Jolie Language Server",
					"default": 9743
				}
			}
		}
	},
	"main": "./out/extension",
	"activationEvents": [
		"onLanguage:jolie"
	],
	"scripts": {
		"vscode:prepublish": "npm run update-vscode && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"dependencies": {
		"execa": "^2.1.0",
		"semver": "^6.3.0",
		"vscode-languageclient": "5.x"
	},
	"devDependencies": {
		"@types/execa": "0.9.x",
		"@types/mocha": "5.x",
		"@types/node": "8.x",
		"@types/semver": "5.x",
		"@types/vscode": "1.x",
		"tslint": "5.x",
		"typescript": "3.x",
		"vscode-test": "1.x"
	}
}
